@model mvcGiris.ViewModels.ProductListViewModel

@if (Model.Products.Count==0)
{
    @await Html.PartialAsync("~/Views/Shared/Components/_productAlert.cshtml")
}
else
{
    <div class="row">
        <div class="col-md-3">
            @await Component.InvokeAsync("Categories")
        </div>
         <div class="col-md-9">
            <div class="row">
                @foreach (var product in Model.Products)
                {
                    <div class="col-md-3">
                        @await Html.PartialAsync("~/Views/Shared/Components/_productCard.cshtml", product)
                    </div>
                }
            </div>
         </div>
    </div>
}